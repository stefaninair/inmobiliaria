@model Inmobiliaria.Models.Pago

@{
    ViewData["Title"] = "Crear Pago";
    var contrato = ViewBag.Contrato as Inmobiliaria.Models.Contrato;
}

<h1>Crear Pago</h1>

@if (contrato != null)
{
    <div class="alert alert-info">
        <h4>Información del Contrato</h4>
        <p><strong>ID:</strong> @contrato.Id</p>
        <p><strong>Inmueble:</strong> @contrato.Inmueble?.Direccion</p>
        <p><strong>Inquilino:</strong> @contrato.Inquilino?.Nombre @contrato.Inquilino?.Apellido</p>
        <p><strong>Monto Mensual:</strong> $@contrato.MontoMensual.ToString("N2")</p>
    </div>
}

<hr />

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="CrearPago">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" asp-for="ContratoId" />
            
            <div class="form-group">
                <label asp-for="Monto" class="control-label"></label>
                <input asp-for="Monto" class="form-control" value="@(contrato?.MontoMensual ?? 0)" />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="FechaPago" class="control-label"></label>
                <input asp-for="FechaPago" type="date" class="form-control" />
                <span asp-validation-for="FechaPago" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Periodo" class="control-label"></label>
                <input asp-for="Periodo" class="form-control" placeholder="Ej: 2024-01" />
                <span asp-validation-for="Periodo" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Observaciones" class="control-label"></label>
                <textarea asp-for="Observaciones" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Observaciones" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Crear Pago" class="btn btn-success" />
                <a class="btn btn-secondary" asp-action="Pagos" asp-route-id="@Model.ContratoId">Cancelar</a>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Información del Pago</h5>
            </div>
            <div class="card-body">
                <p><strong>Monto Sugerido:</strong> $@(contrato?.MontoMensual.ToString("N2") ?? "0.00")</p>
                <p><strong>Formato de Período:</strong> AAAA-MM (ej: 2024-01)</p>
                <p><strong>Fecha Actual:</strong> @DateTime.Now.ToString("dd/MM/yyyy")</p>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-secondary" asp-action="Pagos" asp-route-id="@Model.ContratoId">
        <i class="fa-solid fa-arrow-left"></i> Volver a Pagos
    </a>
</div>
