@model Inmobiliaria.Models.Contrato
@using Inmobiliaria.Models;

@{
    ViewData["Title"] = "Crear Contrato";
    var inmuebles = (IList<Inmueble>)ViewBag.Inmuebles;
    var inquilinos = (IList<Inquilino>)ViewBag.Inquilinos;
}

<h1>Crear Contrato</h1>

<h4>Contrato</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="InmuebleId" class="control-label">Inmueble</label>
                <select asp-for="InmuebleId" class="form-control">
                    <option value="">Seleccionar un inmueble</option>
                    @foreach (var item in inmuebles)
                    {
                        <option value="@item.Id">@item.Direccion</option>
                    }
                </select>
                <span asp-validation-for="InmuebleId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="InquilinoId" class="control-label">Inquilino</label>
                <select id="Inquilino" asp-for="InquilinoId" class="form-control" name="InquilinoId">
                    <option value="">Seleccione un inquilino</option>
                    @foreach (var item in inquilinos)
                    {
                        <option value="@item.Id">@item.Nombre @item.Apellido</option>
                    }
                </select>
                <span asp-validation-for="InquilinoId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label"></label>
                <input asp-for="FechaInicio" type="date" class="form-control" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FechaFin" class="control-label"></label>
                <input asp-for="FechaFin" type="date" class="form-control" />
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MontoMensual" class="control-label"></label>
                <input asp-for="MontoMensual" class="form-control" step="0.01" />
                <span asp-validation-for="MontoMensual" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FechaTerminacionAnticipada" class="control-label"></label>
                <input asp-for="FechaTerminacionAnticipada" type="date" class="form-control" />
                <span asp-validation-for="FechaTerminacionAnticipada" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Multa" class="control-label"></label>
                <input asp-for="Multa" class="form-control" step="0.01" />
                <span asp-validation-for="Multa" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-action="Index">Volver al listado</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            $('#Inquilino').select2({
                language: "es",
                theme: 'bootstrap',
                placeholder: "Buscar inquilino...",
                minimumInputLength: 3,
                maximumInputLength: 50,
                ajax: {
                    delay: 250,
                    dataType: "json",
                    cache: true,
                    url: function (params) {
                        let q = params.term ? encodeURIComponent(params.term) : "";
                        return `/Inquilinos/Buscar/${q}`;
                    },
                    processResults: function (res) {
                        return {
                            results: res.datos.map(i => ({
                                id: i.id, 
                                text: `${i.nombre} ${i.apellido}`
                            }))
                        };
                    }
                }
            });
        });
    </script>
}
