@model Inmobiliaria.Models.Contrato

@{
    ViewData["Title"] = "Eliminar Contrato";
}

<h1>Eliminar Contrato</h1>

<h3>¿Estás seguro que deseas eliminar este contrato?</h3>
<hr />

<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">Inmueble</dt>
            <dd class="col-sm-8">@Model.Inmueble?.Direccion</dd>

            <dt class="col-sm-4">Inquilino</dt>
            <dd class="col-sm-8">@Model.Inquilino?.Nombre @Model.Inquilino?.Apellido</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.FechaInicio)</dt>
            <dd class="col-sm-8">@Model.FechaInicio.ToShortDateString()</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.FechaFin)</dt>
            <dd class="col-sm-8">@Model.FechaFin.ToShortDateString()</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Monto)</dt>
            <dd class="col-sm-8">$@Model.Monto</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Vigente)</dt>
            <dd class="col-sm-8">@(Model.Vigente ? "Sí" : "No")</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a class="btn btn-secondary" asp-action="Index">Volver al listado</a>
        </form>
    </div>
</div>
