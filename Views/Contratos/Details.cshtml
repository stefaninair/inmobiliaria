@model Inmobiliaria.Models.Contrato

@{
    ViewData["Title"] = "Detalles del Contrato";
}

<h1>Detalles del Contrato</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <table class="table table-bordered">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <td>@Model.Id</td>
            </tr>
            <tr>
                <th>Inmueble</th>
                <td>@Model.Inmueble?.Direccion</td>
            </tr>
            <tr>
                <th>Inquilino</th>
                <td>@Model.Inquilino?.Nombre @Model.Inquilino?.Apellido</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.FechaInicio)</th>
                <td>@Model.FechaInicio.ToShortDateString()</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.FechaFin)</th>
                <td>@Model.FechaFin.ToShortDateString()</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Monto)</th>
                <td>$@Model.Monto</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Vigente)</th>
                <td>@(Model.Vigente ? "SÃ­" : "No")</td>
            </tr>
        </table>

        <a class="btn btn-secondary" asp-action="Index">Volver al listado</a>
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Eliminar</a>
    </div>
</div>
