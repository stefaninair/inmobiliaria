@model dynamic

@{
    ViewData["Title"] = "Estadísticas de Contratos";
}

<h1>Estadísticas de Contratos</h1>

<div class="row">
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h3 class="text-primary">@Model.Total</h3>
                <p class="card-text">Total de Contratos</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h3 class="text-success">@Model.Vigentes</h3>
                <p class="card-text">Vigentes</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h3 class="text-warning">@Model.Vencidos</h3>
                <p class="card-text">Vencidos</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h3 class="text-info">@Model.MontoTotal.ToString("C")</h3>
                <p class="card-text">Monto Total</p>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Resumen Financiero</h5>
            </div>
            <div class="card-body">
                <p><strong>Monto Promedio:</strong> @Model.MontoPromedio.ToString("C")</p>
                <p><strong>Total de Contratos:</strong> @Model.Total</p>
                <p><strong>Vigentes:</strong> @Model.Vigentes</p>
                <p><strong>Vencidos:</strong> @Model.Vencidos</p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Distribución</h5>
            </div>
            <div class="card-body">
                @{
                    var porcentajeVigentes = Model.Total > 0 ? (Model.Vigentes * 100.0 / Model.Total) : 0;
                    var porcentajeVencidos = Model.Total > 0 ? (Model.Vencidos * 100.0 / Model.Total) : 0;
                }
                <div class="progress mb-2">
                    <div class="progress-bar bg-success" style="width: @porcentajeVigentes%"></div>
                </div>
                <small class="text-success">Vigentes: @porcentajeVigentes.ToString("F1")%</small>
                
                <div class="progress">
                    <div class="progress-bar bg-warning" style="width: @porcentajeVencidos%"></div>
                </div>
                <small class="text-warning">Vencidos: @porcentajeVencidos.ToString("F1")%</small>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-secondary" asp-action="Index">
        <i class="fa-solid fa-arrow-left"></i> Volver a Contratos
    </a>
</div>