@model Inmobiliaria.Models.PaginacionModel<Inmobiliaria.Models.Contrato>

@{
    ViewData["Title"] = "Listado de Contratos";
}

<h1>Listado de Contratos</h1>

<div class="row mb-3">
    <div class="col-md-6">
        <a class="btn btn-success" asp-action="Create">
            <i class="fa-solid fa-plus"></i> Nuevo Contrato
        </a>
    </div>
    <div class="col-md-6 text-right">
        <div class="btn-group" role="group">
            <a class="btn btn-info" asp-action="Vigentes">
                <i class="fa-solid fa-check-circle"></i> Vigentes
            </a>
            <a class="btn btn-warning" asp-action="Vencidos">
                <i class="fa-solid fa-times-circle"></i> Vencidos
            </a>
            <a class="btn btn-primary" asp-action="PorInmueble">
                <i class="fa-solid fa-building"></i> Por Inmueble
            </a>
            <a class="btn btn-secondary" asp-action="Estadisticas">
                <i class="fa-solid fa-chart-bar"></i> Estadísticas
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <p>Mostrando @Model.Items.Count de @Model.TotalElementos contratos</p>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Inmueble</th>
            <th>Inquilino</th>
            <th>Fecha Inicio</th>
            <th>Fecha Fin</th>
            <th>Monto Mensual</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contrato in Model.Items)
        {
            <tr>
                <td>@contrato.Id</td>
                <td>@contrato.Inmueble?.Direccion</td>
                <td>@contrato.Inquilino?.Nombre @contrato.Inquilino?.Apellido</td>
                <td>@contrato.FechaInicio.ToShortDateString()</td>
                <td>@contrato.FechaFin.ToShortDateString()</td>
                <td>$@contrato.MontoMensual</td>
                <td>
                    @if (contrato.FechaTerminacionAnticipada != null)
                    {
                        <span class="badge badge-warning">Terminado Anticipadamente</span>
                    }
                    else if (contrato.Vigente)
                    {
                        <span class="badge badge-success">Vigente</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">Vencido</span>
                    }
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a class="btn btn-secondary" asp-action="Details" asp-route-id="@contrato.Id" title="Ver">
                            <i class="fa-solid fa-eye"></i>
                        </a>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@contrato.Id" title="Editar">
                            <i class="fa-solid fa-pen"></i>
                        </a>
                        @if (!contrato.FechaTerminacionAnticipada.HasValue)
                        {
                            <a class="btn btn-success" asp-action="Renovar" asp-route-id="@contrato.Id" title="Renovar">
                                <i class="fa-solid fa-calendar-plus"></i>
                            </a>
                            <a class="btn btn-warning" asp-action="Terminar" asp-route-id="@contrato.Id" title="Terminar">
                                <i class="fa-solid fa-calendar-times"></i>
                            </a>
                        }
                        @if (User.IsInRole("Administrador"))
                        {
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@contrato.Id" title="Eliminar">
                                <i class="fa-solid fa-trash-can"></i>
                            </a>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Paginación -->
@if (Model.TotalPaginas > 1)
{
    <nav aria-label="Paginación de contratos">
        <ul class="pagination justify-content-center">
            @if (Model.TienePaginaAnterior)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { pagina = Model.PaginaAnterior })">
                        Anterior
                    </a>
                </li>
            }
            
            @for (int i = Math.Max(1, Model.PaginaActual - 2); i <= Math.Min(Model.TotalPaginas, Model.PaginaActual + 2); i++)
            {
                <li class="page-item @(i == Model.PaginaActual ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { pagina = i })">
                        @i
                    </a>
                </li>
            }
            
            @if (Model.TienePaginaSiguiente)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { pagina = Model.PaginaSiguiente })">
                        Siguiente
                    </a>
                </li>
            }
        </ul>
    </nav>
}
