@{
    ViewData["Title"] = "Seleccionar Inmueble";
    var inmuebles = (IList<Inmobiliaria.Models.Inmueble>)ViewBag.Inmuebles;
}

<h1>Reporte de Contratos por Inmueble</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Seleccionar Inmueble</h5>
            </div>
            <div class="card-body">
                <form asp-action="PorInmueble" method="get">
                    <div class="form-group">
                        <label for="inmuebleId" class="form-label">Inmueble:</label>
                        <select name="inmuebleId" id="inmuebleId" class="form-control" required>
                            <option value="">-- Seleccionar Inmueble --</option>
                            @foreach (var inmueble in inmuebles)
                            {
                                <option value="@inmueble.Id">
                                    @inmueble.Direccion
                                    @if (inmueble.Propietario != null)
                                    {
                                        <text> - Propietario: @inmueble.Propietario.Nombre @inmueble.Propietario.Apellido</text>
                                    }
                                    @if (inmueble.TipoInmueble != null)
                                    {
                                        <text> (@inmueble.TipoInmueble.Nombre)</text>
                                    }
                                </option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa-solid fa-search"></i> Generar Reporte
                        </button>
                        <a class="btn btn-secondary" asp-action="Index">
                            <i class="fa-solid fa-arrow-left"></i> Volver al Listado
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Otras Opciones</h5>
            </div>
            <div class="card-body">
                <div class="list-group">
                    <a class="list-group-item list-group-item-action" asp-action="Vigentes">
                        <i class="fa-solid fa-check-circle text-success"></i>
                        Contratos Vigentes
                    </a>
                    <a class="list-group-item list-group-item-action" asp-action="Vencidos">
                        <i class="fa-solid fa-times-circle text-danger"></i>
                        Contratos Vencidos
                    </a>
                    <a class="list-group-item list-group-item-action" asp-action="Estadisticas">
                        <i class="fa-solid fa-chart-bar text-info"></i>
                        Estad√≠sticas Generales
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

