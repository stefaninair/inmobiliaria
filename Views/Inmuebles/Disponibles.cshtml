@model IEnumerable<Inmobiliaria.Models.Inmueble>

@{
    ViewData["Title"] = "Inmuebles Disponibles";
}

<h1>Inmuebles Disponibles</h1>

<p>
    <a class="btn btn-success" asp-action="Create">
        <i class="fa-solid fa-plus"></i> Nuevo Inmueble
    </a>
    <a class="btn btn-secondary" asp-action="Index">
        <i class="fa-solid fa-list"></i> Ver Todos
    </a>
</p>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Id)</th>
            <th>@Html.DisplayNameFor(model => model.First().Direccion)</th>
            <th>Propietario</th>
            <th>Tipo</th>
            <th>@Html.DisplayNameFor(model => model.First().Precio)</th>
            <th>@Html.DisplayNameFor(model => model.First().Disponible)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Direccion</td>
                <td>
                    @if (item.Propietario != null)
                    {
                        @(item.Propietario.Nombre + " " + item.Propietario.Apellido)
                    }
                    else
                    {
                        <span>Sin propietario asignado</span>
                    }
                </td>
                <td>
                    @if (item.TipoInmueble != null)
                    {
                        @item.TipoInmueble.Nombre
                    }
                    else
                    {
                        <span>Sin tipo asignado</span>
                    }
                </td>
                <td>@item.Precio.ToString("C")</td>
                <td>
                    @if (item.Disponible)
                    {
                        <span class="badge badge-success">Disponible</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">No Disponible</span>
                    }
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id" title="Editar">
                            <i class="fa-solid fa-pen"></i>
                        </a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id" title="Eliminar">
                            <i class="fa-solid fa-trash-can"></i>
                        </a>
                        <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id" title="Ver">
                            <i class="fa-solid fa-eye"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
