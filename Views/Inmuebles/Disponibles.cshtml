@model List<Inmobiliaria.Models.Inmueble>

@{
    ViewData["Title"] = "Inmuebles Disponibles";
}

<h1>Inmuebles Disponibles</h1>

<div class="row mb-3">
    <div class="col-md-12">
        <form method="post" class="form-inline">
            <div class="form-group mr-3">
                <label for="fechaInicio" class="mr-2">Fecha Inicio:</label>
                <input type="date" id="fechaInicio" name="fechaInicio" class="form-control" required />
            </div>
            <div class="form-group mr-3">
                <label for="fechaFin" class="mr-2">Fecha Fin:</label>
                <input type="date" id="fechaFin" name="fechaFin" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary">
                <i class="fa-solid fa-search"></i> Buscar Disponibles
            </button>
        </form>
    </div>
</div>

@if (ViewBag.FechaInicio != null && ViewBag.FechaFin != null)
{
    <div class="alert alert-info">
        <strong>Período consultado:</strong> @ViewBag.FechaInicio.ToString("dd/MM/yyyy") - @ViewBag.FechaFin.ToString("dd/MM/yyyy")
    </div>
}

@if (Model != null && Model.Any())
{
    <div class="row">
        <div class="col-md-12">
            <p class="text-success">Se encontraron @Model.Count inmuebles disponibles en el período seleccionado.</p>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Dirección</th>
                <th>Tipo</th>
                <th>Uso</th>
                <th>Ambientes</th>
                <th>Superficie</th>
                <th>Precio</th>
                <th>Propietario</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var inmueble in Model)
            {
                <tr>
                    <td>@inmueble.Id</td>
                    <td>@inmueble.Direccion</td>
                    <td>@inmueble.TipoInmueble?.Nombre</td>
                    <td>@inmueble.Uso</td>
                    <td>@inmueble.Ambientes</td>
                    <td>@inmueble.Superficie m²</td>
                    <td>$@inmueble.Precio.ToString("N2")</td>
                    <td>@inmueble.Propietario?.Nombre @inmueble.Propietario?.Apellido</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a class="btn btn-info" asp-controller="Inmuebles" asp-action="Details" asp-route-id="@inmueble.Id" title="Ver detalles">
                                <i class="fa-solid fa-eye"></i>
                            </a>
                            <a class="btn btn-success" asp-controller="Contratos" asp-action="Create" asp-route-inmuebleId="@inmueble.Id" title="Crear contrato">
                                <i class="fa-solid fa-file-contract"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else if (ViewBag.FechaInicio != null && ViewBag.FechaFin != null)
{
    <div class="alert alert-warning">
        <i class="fa-solid fa-exclamation-triangle"></i>
        No se encontraron inmuebles disponibles en el período seleccionado.
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fa-solid fa-info-circle"></i>
        Seleccione un período de fechas para buscar inmuebles disponibles.
    </div>
}

<div class="mt-3">
    <a class="btn btn-secondary" asp-controller="Inmuebles" asp-action="Index">
        <i class="fa-solid fa-arrow-left"></i> Volver al listado de inmuebles
    </a>
</div>