@model dynamic

@{
    ViewData["Title"] = "Estadísticas de Inmuebles";
}

<h1>Estadísticas de Inmuebles</h1>

<div class="row">
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h3 class="text-primary">@Model.Total</h3>
                <p class="card-text">Total de Inmuebles</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h3 class="text-success">@Model.Disponibles</h3>
                <p class="card-text">Disponibles</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h3 class="text-warning">@Model.Ocupados</h3>
                <p class="card-text">Ocupados</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h3 class="text-info">@Model.ValorTotal.ToString("C")</h3>
                <p class="card-text">Valor Total</p>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Resumen Financiero</h5>
            </div>
            <div class="card-body">
                <p><strong>Valor Promedio:</strong> @Model.ValorPromedio.ToString("C")</p>
                <p><strong>Total de Inmuebles:</strong> @Model.Total</p>
                <p><strong>Disponibles:</strong> @Model.Disponibles</p>
                <p><strong>Ocupados:</strong> @Model.Ocupados</p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Distribución</h5>
            </div>
            <div class="card-body">
                @{
                    var porcentajeDisponibles = Model.Total > 0 ? (Model.Disponibles * 100.0 / Model.Total) : 0;
                    var porcentajeOcupados = Model.Total > 0 ? (Model.Ocupados * 100.0 / Model.Total) : 0;
                }
                <div class="progress mb-2">
                    <div class="progress-bar bg-success" style="width: @porcentajeDisponibles%"></div>
                </div>
                <small class="text-success">Disponibles: @porcentajeDisponibles.ToString("F1")%</small>
                
                <div class="progress">
                    <div class="progress-bar bg-warning" style="width: @porcentajeOcupados%"></div>
                </div>
                <small class="text-warning">Ocupados: @porcentajeOcupados.ToString("F1")%</small>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-secondary" asp-action="Index">
        <i class="fa-solid fa-arrow-left"></i> Volver a Inmuebles
    </a>
</div>