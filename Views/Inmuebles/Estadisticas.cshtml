@model dynamic

@{
    ViewData["Title"] = "Estadísticas de Inmuebles";
}

<h1>Estadísticas de Inmuebles</h1>

<div class="row">
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title text-primary">
                    <i class="fa-solid fa-building"></i>
                </h5>
                <h3 class="text-primary">@Model.TotalInmuebles</h3>
                <p class="card-text">Total de Inmuebles</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title text-success">
                    <i class="fa-solid fa-check-circle"></i>
                </h5>
                <h3 class="text-success">@Model.InmueblesDisponibles</h3>
                <p class="card-text">Disponibles</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title text-warning">
                    <i class="fa-solid fa-users"></i>
                </h5>
                <h3 class="text-warning">@Model.InmueblesOcupados</h3>
                <p class="card-text">Ocupados</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title text-info">
                    <i class="fa-solid fa-home"></i>
                </h5>
                <h3 class="text-info">@Model.InmueblesLibres</h3>
                <p class="card-text">Libres</p>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Información General</h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li><i class="fa-solid fa-user-tie text-primary"></i> <strong>Total Propietarios:</strong> @Model.TotalPropietarios</li>
                    <li><i class="fa-solid fa-dollar-sign text-success"></i> <strong>Ingresos Potenciales:</strong> @Model.IngresosPotenciales.ToString("C")</li>
                    <li><i class="fa-solid fa-percentage text-info"></i> <strong>Ocupación:</strong> @(Model.TotalInmuebles > 0 ? Math.Round(Model.InmueblesOcupados * 100.0 / Model.TotalInmuebles, 1) : 0)%</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Acciones Rápidas</h5>
            </div>
            <div class="card-body">
                <div class="list-group">
                    <a class="list-group-item list-group-item-action" asp-action="Libres">
                        <i class="fa-solid fa-home text-success"></i>
                        Ver Inmuebles Libres
                    </a>
                    <a class="list-group-item list-group-item-action" asp-action="Ocupados">
                        <i class="fa-solid fa-users text-warning"></i>
                        Ver Inmuebles Ocupados
                    </a>
                    <a class="list-group-item list-group-item-action" asp-action="PorPropietario">
                        <i class="fa-solid fa-user-tie text-info"></i>
                        Reporte por Propietario
                    </a>
                    <a class="list-group-item list-group-item-action" asp-action="Index">
                        <i class="fa-solid fa-list text-secondary"></i>
                        Ver Todos los Inmuebles
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Distribución de Inmuebles</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6>Estado de Inmuebles</h6>
                        <div class="progress mb-2">
                            <div class="progress-bar bg-success" style="width: @(Model.TotalInmuebles > 0 ? (Model.InmueblesDisponibles * 100.0 / Model.TotalInmuebles) : 0)%">
                                Disponibles: @Model.InmueblesDisponibles
                            </div>
                        </div>
                        <div class="progress mb-2">
                            <div class="progress-bar bg-danger" style="width: @(Model.TotalInmuebles > 0 ? ((Model.TotalInmuebles - Model.InmueblesDisponibles) * 100.0 / Model.TotalInmuebles) : 0)%">
                                No Disponibles: @(Model.TotalInmuebles - Model.InmueblesDisponibles)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h6>Ocupación</h6>
                        <div class="progress mb-2">
                            <div class="progress-bar bg-warning" style="width: @(Model.TotalInmuebles > 0 ? (Model.InmueblesOcupados * 100.0 / Model.TotalInmuebles) : 0)%">
                                Ocupados: @Model.InmueblesOcupados
                            </div>
                        </div>
                        <div class="progress mb-2">
                            <div class="progress-bar bg-info" style="width: @(Model.TotalInmuebles > 0 ? (Model.InmueblesLibres * 100.0 / Model.TotalInmuebles) : 0)%">
                                Libres: @Model.InmueblesLibres
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-secondary" asp-action="Index">
        <i class="fa-solid fa-arrow-left"></i> Volver al Listado
    </a>
</div>

