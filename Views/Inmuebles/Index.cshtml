@model IEnumerable<Inmobiliaria.Models.Inmueble>

@{
    ViewData["Title"] = "Listado de Inmuebles";
    var rnd = new Random();
}

<h1>Listado de Inmuebles</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Nuevo Inmueble</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Id)</th>
            <th>@Html.DisplayNameFor(model => model.First().Direccion)</th>
            <th>@Html.DisplayNameFor(model => model.First().Ambientes)</th>
            <th>@Html.DisplayNameFor(model => model.First().Superficie)</th>
            <th>Propietario</th>
            <th>Imagen</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Direccion</td>
                <td>@item.Ambientes</td>
                <td>@item.Superficie m²</td>
                <td>
                    @if (item.Duenio != null)
                    {
                        @(item.Duenio.Nombre + " " + item.Duenio.Apellido)
                    }
                    else
                    {
                        <span>Sin dueño asignado</span>
                    }
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Portada))
                    {
                        <img width="64" src="~/img/@item.Portada?@rnd.Next()" alt="Foto" class="img-thumbnail" />
                    }
                    else
                    {
                        <span>Sin foto</span>
                    }
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id" title="Editar">
                            <i class="fa-solid fa-pen"></i>
                        </a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id" title="Eliminar">
                            <i class="fa-solid fa-trash-can"></i>
                        </a>
                        <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id" title="Ver">
                            <i class="fa-solid fa-eye"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
