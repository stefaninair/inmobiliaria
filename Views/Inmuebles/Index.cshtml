@model Inmobiliaria.Models.PaginacionModel<Inmobiliaria.Models.Inmueble>

@{
    ViewData["Title"] = "Listado de Inmuebles";
    var rnd = new Random();
}

<h1>Listado de Inmuebles</h1>

<div class="row mb-3">
    <div class="col-md-6">
        <a class="btn btn-success" asp-action="Create">
            <i class="fa-solid fa-plus"></i> Nuevo Inmueble
        </a>
    </div>
    <div class="col-md-6 text-right">
        <div class="btn-group" role="group">
            <a class="btn btn-info" asp-action="Disponibles">
                <i class="fa-solid fa-check-circle"></i> Disponibles
            </a>
            <a class="btn btn-success" asp-action="Libres">
                <i class="fa-solid fa-home"></i> Libres
            </a>
            <a class="btn btn-warning" asp-action="Ocupados">
                <i class="fa-solid fa-users"></i> Ocupados
            </a>
            <a class="btn btn-primary" asp-action="PorPropietario">
                <i class="fa-solid fa-user-tie"></i> Por Propietario
            </a>
            <a class="btn btn-secondary" asp-action="Estadisticas">
                <i class="fa-solid fa-chart-bar"></i> Estadísticas
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <p>Mostrando @Model.Items.Count de @Model.TotalElementos inmuebles</p>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Dirección</th>
            <th>Propietario</th>
            <th>Tipo</th>
            <th>Precio</th>
            <th>Disponible</th>
            <th>Portada</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Direccion</td>
                <td>
                    @if (item.Propietario != null)
                    {
                        @(item.Propietario.Nombre + " " + item.Propietario.Apellido)
                    }
                    else
                    {
                        <span>Sin propietario asignado</span>
                    }
                </td>
                <td>
                    @if (item.TipoInmueble != null)
                    {
                        @item.TipoInmueble.Nombre
                    }
                    else
                    {
                        <span>Sin tipo asignado</span>
                    }
                </td>
                <td>@item.Precio.ToString("C")</td>
                <td>
                    @if (item.Disponible)
                    {
                        <span class="badge badge-success">Disponible</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">No Disponible</span>
                    }
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Portada))
                    {
                        var x = item.Portada + "?" + rnd.Next();
                        <img width="32" src="@x" />
                    }
                    else
                    {
                        <span>Sin foto</span>
                    }
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id" title="Editar">
                            <i class="fa-solid fa-pen"></i>
                        </a>
                        @if (User.IsInRole("Administrador"))
                        {
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id" title="Eliminar">
                                <i class="fa-solid fa-trash-can"></i>
                            </a>
                        }
                        <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id" title="Ver">
                            <i class="fa-solid fa-eye"></i>
                        </a>
                        <a class="btn btn-info" asp-action="Imagenes" asp-route-id="@item.Id" title="Ver imágenes">
                            <i class="fa-solid fa-images"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Paginación -->
@if (Model.TotalPaginas > 1)
{
    <nav aria-label="Paginación de inmuebles">
        <ul class="pagination justify-content-center">
            @if (Model.TienePaginaAnterior)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { pagina = Model.PaginaAnterior })">
                        Anterior
                    </a>
                </li>
            }
            
            @for (int i = Math.Max(1, Model.PaginaActual - 2); i <= Math.Min(Model.TotalPaginas, Model.PaginaActual + 2); i++)
            {
                <li class="page-item @(i == Model.PaginaActual ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { pagina = i })">
                        @i
                    </a>
                </li>
            }
            
            @if (Model.TienePaginaSiguiente)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { pagina = Model.PaginaSiguiente })">
                        Siguiente
                    </a>
                </li>
            }
        </ul>
    </nav>
}

