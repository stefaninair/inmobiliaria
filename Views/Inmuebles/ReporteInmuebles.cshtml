@model IEnumerable<Inmobiliaria.Models.Inmueble>

@{
    ViewData["Title"] = ViewBag.Titulo;
}

<h1>@ViewBag.Titulo</h1>

<div class="row mb-3">
    <div class="col-md-6">
        <p class="text-muted">Total de inmuebles: <strong>@ViewBag.Total</strong></p>
    </div>
    <div class="col-md-6 text-right">
        <a class="btn btn-secondary" asp-action="Index">
            <i class="fa-solid fa-arrow-left"></i> Volver al Listado
        </a>
        <a class="btn btn-info" asp-action="Estadisticas">
            <i class="fa-solid fa-chart-bar"></i> Estadísticas
        </a>
    </div>
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Dirección</th>
                    <th>Propietario</th>
                    <th>Tipo</th>
                    <th>Ambientes</th>
                    <th>Superficie</th>
                    <th>Precio</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var inmueble in Model)
                {
                    <tr>
                        <td>@inmueble.Id</td>
                        <td>@inmueble.Direccion</td>
                        <td>
                            @inmueble.Propietario?.Nombre @inmueble.Propietario?.Apellido
                            <br><small class="text-muted">@inmueble.Propietario?.Email</small>
                        </td>
                        <td>@inmueble.TipoInmueble?.Nombre</td>
                        <td>@inmueble.Ambientes</td>
                        <td>@(inmueble.Superficie?.ToString("N0") ?? "N/A") m²</td>
                        <td>@inmueble.Precio.ToString("C")</td>
                        <td>
                            @if (inmueble.Disponible)
                            {
                                <span class="badge badge-success">Disponible</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">No Disponible</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@inmueble.Id" title="Ver">
                                    <i class="fa-solid fa-eye"></i>
                                </a>
                                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@inmueble.Id" title="Editar">
                                    <i class="fa-solid fa-pen"></i>
                                </a>
                                @if (User.IsInRole("Administrador"))
                                {
                                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@inmueble.Id" title="Eliminar">
                                        <i class="fa-solid fa-trash-can"></i>
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fa-solid fa-info-circle"></i>
        No se encontraron inmuebles para los criterios seleccionados.
    </div>
}

<div class="mt-3">
    <a class="btn btn-secondary" asp-action="Index">
        <i class="fa-solid fa-arrow-left"></i> Volver al Listado
    </a>
</div>

