@model Inmobiliaria.Models.Inmueble

@{
    ViewData["Title"] = "Fotos del Inmueble";
}

<h1>Fotos del Inmueble</h1>

<div class="row">
    <div class="col-md-8">
        <h3>@Model.Direccion</h3>
        <p><strong>Propietario:</strong> @(Model.Propietario?.Nombre + " " + Model.Propietario?.Apellido)</p>
        <p><strong>Tipo:</strong> @Model.TipoInmueble?.Nombre</p>
        <p><strong>Precio:</strong> @Model.Precio.ToString("C")</p>
    </div>
    <div class="col-md-4 text-right">
        <a class="btn btn-secondary" asp-action="Index">
            <i class="fa-solid fa-arrow-left"></i> Volver a la lista
        </a>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-md-12">
        @if (!string.IsNullOrEmpty(Model.Portada))
        {
            <h4>Foto de Portada</h4>
            <div class="text-center mb-4">
                <img src="~/img/@Model.Portada" alt="Portada del inmueble" class="img-fluid rounded shadow" style="max-height: 400px;" />
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                <i class="fa-solid fa-image fa-3x mb-3"></i>
                <h4>Sin fotos disponibles</h4>
                <p>Este inmueble no tiene fotos cargadas.</p>
            </div>
        }
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <div class="btn-group" role="group">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">
                <i class="fa-solid fa-pen"></i> Editar Inmueble
            </a>
            <a class="btn btn-info" asp-action="Details" asp-route-id="@Model.Id">
                <i class="fa-solid fa-eye"></i> Ver Detalles
            </a>
            @if (User.IsInRole("Administrador"))
            {
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">
                    <i class="fa-solid fa-trash-can"></i> Eliminar
                </a>
            }
        </div>
    </div>
</div>
