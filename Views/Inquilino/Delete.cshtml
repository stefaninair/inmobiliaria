@model Inmobiliaria.Models.Inquilino

@{
    ViewData["Title"] = "Eliminar Inquilino";
}

<h1>Eliminar Inquilino</h1>

<h3>¿Estás seguro de que deseas eliminar este inquilino?</h3>
<div>
    <h4>@Model.Nombre @Model.Apellido</h4>
    <dl class="row">
        <dt class="col-sm-2">DNI</dt>
        <dd class="col-sm-10">@Model.DNI</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Teléfono</dt>
        <dd class="col-sm-10">@Model.Telefono</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
