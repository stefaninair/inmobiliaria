@model Inmobiliaria.Models.Inquilino

@{
    ViewData["Title"] = "Detalles del Inquilino";
}

<h1>Detalles del Inquilino</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <table class="table table-bordered">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <td>@Model.Id</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <td>@Model.Nombre</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Apellido)</th>
                <td>@Model.Apellido</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Dni)</th>
                <td>@Model.Dni</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                <td>@Model.Telefono</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <td>@Model.Email</td>
            </tr>
        </table>

        <div class="btn-group" role="group">
            <a class="btn btn-secondary" asp-action="Index">
                <i class="fa-solid fa-arrow-left"></i> Volver al listado
            </a>
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">
                <i class="fa-solid fa-pen"></i> Editar
            </a>
            @if (User.IsInRole("Administrador"))
            {
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">
                    <i class="fa-solid fa-trash-can"></i> Eliminar
                </a>
            }
        </div>
    </div>
</div>
