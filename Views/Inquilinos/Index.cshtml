@model Inmobiliaria.Models.PaginacionModel<Inmobiliaria.Models.Inquilino>

@{
    ViewData["Title"] = "Inquilinos";
}

<h1>Listado de Inquilinos</h1>

<div class="row mb-3">
    <div class="col-md-6">
        <a class="btn btn-success" asp-action="Create">
            <i class="fa-solid fa-plus"></i> Nuevo Inquilino
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <p>Mostrando @Model.Items.Count de @Model.TotalElementos inquilinos</p>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>DNI</th>
            <th>Teléfono</th>
            <th>Email</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dni)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id" title="Editar">
                            <i class="fa-solid fa-pen"></i>
                        </a>
                        @if (User.IsInRole("Administrador"))
                        {
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id" title="Eliminar">
                                <i class="fa-solid fa-trash-can"></i>
                            </a>
                        }
                        <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id" title="Ver">
                            <i class="fa-solid fa-eye"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Paginación -->
@if (Model.TotalPaginas > 1)
{
    <nav aria-label="Paginación de inquilinos">
        <ul class="pagination justify-content-center">
            @if (Model.TienePaginaAnterior)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { pagina = Model.PaginaAnterior })">
                        Anterior
                    </a>
                </li>
            }
            
            @for (int i = Math.Max(1, Model.PaginaActual - 2); i <= Math.Min(Model.TotalPaginas, Model.PaginaActual + 2); i++)
            {
                <li class="page-item @(i == Model.PaginaActual ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { pagina = i })">
                        @i
                    </a>
                </li>
            }
            
            @if (Model.TienePaginaSiguiente)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { pagina = Model.PaginaSiguiente })">
                        Siguiente
                    </a>
                </li>
            }
        </ul>
    </nav>
}
