@model Inmobiliaria.Models.PaginacionModel<Inmobiliaria.Models.Inquilino>

@{
    ViewData["Title"] = "Inquilinos";
}

<h1>Inquilinos</h1>

<p>
    <a asp-action="Create">Crear Nuevo</a>
</p>

<div class="row">
    <div class="col-md-12">
        <p>Mostrando @Model.Items.Count de @Model.TotalElementos inquilinos</p>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Código
            </th>
            <th>
                Nombre
            </th>
            <th>
                Apellido
            </th>
            <th>
                DNI
            </th>
            <th>
                Teléfono
            </th>
            <th>
                Email
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dni)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                    @if (User.IsInRole("Administrador"))
                    {
                        <text> | </text>
                        <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Paginación -->
@if (Model.TotalPaginas > 1)
{
    <nav aria-label="Paginación de inquilinos">
        <ul class="pagination justify-content-center">
            @if (Model.TienePaginaAnterior)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { pagina = Model.PaginaAnterior })">
                        Anterior
                    </a>
                </li>
            }
            
            @for (int i = Math.Max(1, Model.PaginaActual - 2); i <= Math.Min(Model.TotalPaginas, Model.PaginaActual + 2); i++)
            {
                <li class="page-item @(i == Model.PaginaActual ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { pagina = i })">
                        @i
                    </a>
                </li>
            }
            
            @if (Model.TienePaginaSiguiente)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { pagina = Model.PaginaSiguiente })">
                        Siguiente
                    </a>
                </li>
            }
        </ul>
    </nav>
}
