@model Inmobiliaria.Models.Pago

@{
    ViewData["Title"] = "Anular Pago";
}

<h1>Anular Pago</h1>

<h3>¿Estás seguro que deseas anular este pago?</h3>
<hr />

<div class="row">
    <div class="col-md-8">
        <table class="table table-bordered">
            <tr>
                <th>ID</th>
                <td>@Model.Id</td>
            </tr>
            <tr>
                <th>Contrato</th>
                <td>
                    @Model.Contrato?.Inmueble?.Direccion
                    <br><small class="text-muted">Contrato #@Model.ContratoId</small>
                </td>
            </tr>
            <tr>
                <th>Inquilino</th>
                <td>@Model.Contrato?.Inquilino?.Nombre @Model.Contrato?.Inquilino?.Apellido</td>
            </tr>
            <tr>
                <th>Monto</th>
                <td>@Model.Monto.ToString("C")</td>
            </tr>
            <tr>
                <th>Fecha de Pago</th>
                <td>@Model.FechaPago.ToShortDateString()</td>
            </tr>
            <tr>
                <th>Período</th>
                <td>@Model.Periodo</td>
            </tr>
            <tr>
                <th>Observaciones</th>
                <td>@(Model.Observaciones ?? "Sin observaciones")</td>
            </tr>
        </table>

        <form asp-action="Anular" method="post">
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group">
                <label for="motivoAnulacion" class="form-label">Motivo de Anulación:</label>
                <textarea name="motivoAnulacion" id="motivoAnulacion" class="form-control" rows="3" required 
                          placeholder="Ingrese el motivo de la anulación..."></textarea>
                <small class="form-text text-muted">Este motivo quedará registrado en el historial del pago.</small>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-warning">
                    <i class="fa-solid fa-ban"></i> Confirmar Anulación
                </button>
                <a class="btn btn-secondary" asp-action="Index">
                    <i class="fa-solid fa-arrow-left"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

