@model Inmobiliaria.Models.Pago

@{
    ViewData["Title"] = "Eliminar Pago";
}

<h1>Eliminar Pago</h1>

<h3>¿Estás seguro que deseas eliminar este pago?</h3>
<hr />

<div class="row">
    <div class="col-md-8">
        <table class="table table-bordered">
            <tr>
                <th>ID</th>
                <td>@Model.Id</td>
            </tr>
            <tr>
                <th>Contrato</th>
                <td>
                    @Model.Contrato?.Inmueble?.Direccion
                    <br><small class="text-muted">Contrato #@Model.ContratoId</small>
                </td>
            </tr>
            <tr>
                <th>Inquilino</th>
                <td>@Model.Contrato?.Inquilino?.Nombre @Model.Contrato?.Inquilino?.Apellido</td>
            </tr>
            <tr>
                <th>Monto</th>
                <td>@Model.Monto.ToString("C")</td>
            </tr>
            <tr>
                <th>Fecha de Pago</th>
                <td>@Model.FechaPago.ToShortDateString()</td>
            </tr>
            <tr>
                <th>Período</th>
                <td>@Model.Periodo</td>
            </tr>
            <tr>
                <th>Observaciones</th>
                <td>@(Model.Observaciones ?? "Sin observaciones")</td>
            </tr>
        </table>

        <div class="alert alert-warning">
            <i class="fa-solid fa-exclamation-triangle"></i>
            <strong>Advertencia:</strong> Esta acción eliminará el pago del sistema. 
            El pago podrá ser restaurado posteriormente por un administrador.
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group">
                <button type="submit" class="btn btn-danger">
                    <i class="fa-solid fa-trash-can"></i> Confirmar Eliminación
                </button>
                <a class="btn btn-secondary" asp-action="Index">
                    <i class="fa-solid fa-arrow-left"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

