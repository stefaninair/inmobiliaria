@model IEnumerable<Inmobiliaria.Models.Pago>

@{
    ViewData["Title"] = "Pagos del Contrato";
    var contrato = (Inmobiliaria.Models.Contrato)ViewBag.Contrato;
    var totalPagos = (decimal)ViewBag.TotalPagos;
}

<h1>Pagos del Contrato</h1>

<div class="row mb-3">
    <div class="col-md-6">
        <h4>Contrato #@contrato.Id</h4>
        <p><strong>Inmueble:</strong> @contrato.Inmueble?.Direccion</p>
        <p><strong>Inquilino:</strong> @contrato.Inquilino?.Nombre @contrato.Inquilino?.Apellido</p>
        <p><strong>Período:</strong> @contrato.FechaInicio.ToShortDateString() - @contrato.FechaFin.ToShortDateString()</p>
    </div>
    <div class="col-md-6 text-right">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Total Pagado</h5>
                <h3 class="text-success">@totalPagos.ToString("C")</h3>
                <p class="card-text">de @contrato.MontoMensual.ToString("C") mensuales</p>
            </div>
        </div>
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-6">
        <a class="btn btn-success" asp-action="Create" asp-route-contratoId="@contrato.Id">
            <i class="fa-solid fa-plus"></i> Nuevo Pago
        </a>
    </div>
    <div class="col-md-6 text-right">
        <a class="btn btn-secondary" asp-action="Index">
            <i class="fa-solid fa-arrow-left"></i> Volver al Listado
        </a>
    </div>
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Monto</th>
                    <th>Fecha Pago</th>
                    <th>Período</th>
                    <th>Estado</th>
                    <th>Observaciones</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pago in Model)
                {
                    <tr>
                        <td>@pago.Id</td>
                        <td>@pago.Monto.ToString("C")</td>
                        <td>@pago.FechaPago.ToShortDateString()</td>
                        <td>@pago.Periodo</td>
                        <td>
                            @if (pago.Eliminado)
                            {
                                <span class="badge badge-danger">Eliminado</span>
                            }
                            else if (pago.Anulado)
                            {
                                <span class="badge badge-warning">Anulado</span>
                            }
                            else
                            {
                                <span class="badge badge-success">Activo</span>
                            }
                        </td>
                        <td>@(pago.Observaciones ?? "Sin observaciones")</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@pago.Id" title="Ver">
                                    <i class="fa-solid fa-eye"></i>
                                </a>
                                @if (!pago.Eliminado && !pago.Anulado)
                                {
                                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@pago.Id" title="Editar">
                                        <i class="fa-solid fa-pen"></i>
                                    </a>
                                    <a class="btn btn-sm btn-warning" asp-action="Anular" asp-route-id="@pago.Id" title="Anular">
                                        <i class="fa-solid fa-ban"></i>
                                    </a>
                                    @if (User.IsInRole("Administrador"))
                                    {
                                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@pago.Id" title="Eliminar">
                                            <i class="fa-solid fa-trash-can"></i>
                                        </a>
                                    }
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fa-solid fa-info-circle"></i>
        No se encontraron pagos para este contrato.
    </div>
}

