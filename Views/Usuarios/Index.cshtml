@model IEnumerable<Inmobiliaria.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<h1>Usuarios</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<p>
    <a class="btn btn-success" asp-action="Create">
        <i class="fa-solid fa-plus"></i> Nuevo Usuario
    </a>
</p>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Id)</th>
            <th>@Html.DisplayNameFor(model => model.First().Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.First().Apellido)</th>
            <th>@Html.DisplayNameFor(model => model.First().Email)</th>
            <th>Avatar</th>
            <th>@Html.DisplayNameFor(model => model.First().Rol)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nombre</td>
                <td>@item.Apellido</td>
                <td>@item.Email</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.AvatarPath))
                    {
                        <img src="@item.AvatarPath" alt="Avatar" class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;" />
                    }
                    else
                    {
                        <span class="text-muted">Sin avatar</span>
                    }
                </td>
                <td>
                    @if (item.Rol == Inmobiliaria.Models.Rol.Administrador)
                    {
                        <span class="badge badge-danger">Administrador</span>
                    }
                    else
                    {
                        <span class="badge badge-info">Empleado</span>
                    }
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id" title="Editar">
                            <i class="fa-solid fa-pen"></i>
                        </a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id" title="Eliminar">
                            <i class="fa-solid fa-trash-can"></i>
                        </a>
                        <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id" title="Ver">
                            <i class="fa-solid fa-eye"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

